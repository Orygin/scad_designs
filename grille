intersection(){
printPlug(true);

    // Intersect with cube 
    translate([12,15,0]) cube([55/*142*/,55,panel_height+3]);
    
}

}

module cornerBorder(cornerR){
    difference(){
        cube([cornerR,cornerR,HHD+30]);
        translate([cornerR,cornerR,0])
        cylinder(HHD+30, cornerR, cornerR, false);
    }
}
