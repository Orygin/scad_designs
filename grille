module plug(){
    innerhole=2.64;
    plug_height=panel_height+3;

    for(i=[2,7,12,17,22,27]){
    for(j=[2,6]){

    linear_extrude(height=plug_height)
      translate_to_hex(i, j, 5)
      {        
          difference()
          {
            hexagon(7); // base
            hexagon(innerhole); // hole
          }
      }
      
}
}

